extends mainLayout
block content
  script(src="https://d3js.org/d3.v4.min.js")
  if(username == null)
    p You are not logged in.
    p You are logged in as #{username}.
  else
    div(class="container-fluid", id="teamHeader")
      div(class="col-lg-12", id="title")
      div(class="col-lg-4", id="standings")
        h3 Conference Standings
        table(id="standingsTable")
            tr(id="thead")
              th Rank
              th Team
              th Wins
              th Losses
              th Points
      div(class="col-lg-5", id="plot")
        h3 Team Performance Overview
      div(class="col-lg-3", id="stats")
        div(id="topPlayers")
          h3 Top 3 Players
          ul(class="list-group", id="playerList")
        div(id="goalies")
          h3 Goalies
          ul(class="list-group", id="goalieList")

    script
      include ../scripts/homepage.js

  div= body
