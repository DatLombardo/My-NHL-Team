extends mainLayout
block content
  script(src="https://d3js.org/d3.v4.min.js")

  script
    include ../scripts/homepage.js
  // Checks if if username is empty
  if(username == null)
    p You are not logged in.
    p You are logged in as #{username}.
  else
    div(class="container-fluid", id="teamHeader")
      div(class="col-lg-12", id="title")

      // generation of table for team standings
      div(class="col-lg-4", id="standings")
        h3(id="standingsTitle") Conference Standings
        table(id="standingsTable")
            tr(id="thead")
              th Rank
              th Team
              th Wins
              th Losses
              th Points

      // space for Scatterplot
      div(class="col-lg-5", id="plot")
        h3(id="plotTitle") Team Performance Overview

      // used for team statistics (Top players and Goalies)  
      div(class="col-lg-3", id="stats")
        div(id="topPlayers")
          h3(id="topPlayersTitle") Top 3 Players
          ul(class="list-group", id="playerList")
        div(id="goalies")
          h3(id="goaliesTitle") Goalies
          ul(class="list-group", id="goalieList")

  div= body
