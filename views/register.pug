extends mainLayout
block content
  h1= title

  div= errorMessage
  script
    include ../scripts/register.js

  form(action='/registrationProcess',
      method= 'post',
      class= 'form-horizontal')

    label(class='control-label col-md-1', for='username') Username:
    div(class='col-md-2 form-group')
      input(type='text',
            id='username',
            name='username',
            placeholder='Username',
            class='form-control')

    label(class='control-label col-md-1', for='pwd') Password:
    div(class='col-md-2 form-group')
      input(type='password',
            id='pwd',
            name='pwd',
            placeholder='Password',
            class='form-control')

    label(class='control-label col-md-1', for='team') Your Team:
    div(class='col-md-2 form-group')
      select(class="form-control", id="team" name="team")

    div(class='col-md-offset-1 col-md-1')
      button(type='submit', class='btn btn-primary') Sign-Up
